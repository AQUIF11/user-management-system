<%- include('partials/header_update') %>


<section id="updateUserForm" class="my-5">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header bg-success text-white">
              <h4>Enter User Details</h4>
            </div>
            <div class="card-body">
				<form method="POST" action="/update_user/<%= results[0].id %>">
					<hr>
					<div class="row">
						<div class="col-md-6">
                  <div class="form-group">
                    <input type="text" class="form-control" placeholder="First Name" name="first_name" value="<%= results[0].first_name %>" required maxlength="20">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <input type="text" class="form-control" placeholder="Last Name" name="last_name" value="<%= results[0].last_name %>" required maxlength="20">
                  </div>
                </div>
				<div class="col-md-6">
                  <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" name="email" value="<%= results[0].email %>" required maxlength="30">
                  </div>
                </div>
				<div class="col-md-6">
                  <div class="form-group">
                    <input type="tel" class="form-control" placeholder="Phone Number" name="phone_number" value="<%= results[0].phone_number %>" required maxlength="10" minlength="10">
                  </div>
                </div>
				</div>
					<hr>
				<div class="row">
					<div class="col-md-6">
                  <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-outline-success btn-block">
                  </div>
                </div>
					<div class="col-md-6">
                  <div class="form-group">
                   <a href="/" class="btn btn-outline-danger btn-block">Cancel</a>
                  </div>
                </div>
				</div>
					
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


<%- include('partials/footer') %>